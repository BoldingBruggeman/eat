# This script is intended to be source'd, not executed

set -e

REPO_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Build eat
WORK_DIR=`mktemp -d`
cmake -S ${REPO_DIR} -B ${WORK_DIR} -DCMAKE_INSTALL_PREFIX="$CONDA_PREFIX" $@
cmake --build ${WORK_DIR} --parallel 4 --target install
rm -rf ${WORK_DIR}

set +e
